<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>ユーザー詳細</h4>
      <div class="card p-1">
        <div>
          <%= image_tag @user.get_profile_image(70,70), class:"rounded-circle p-2" %>
          <strong><%= @user.name %></strong>
        </div>
        <div class="text-danger">
          <% if @user.is_active == false %>
            アカウント停止中です
          <% end %>
        </div>
        <div class="mt-4">
          <h5>自己紹介</h5>
          <div class="p-1"><%= @user.introduction %></div>
        </div>
      </div>
      <p class="mt-3">
        <%= link_to 'アカウントの停止 ＞', edit_admin_user_path(@user) %> 
      </p>
      <p>
        <%= link_to 'ユーザー一覧に戻る ＞', admin_users_path %>
      </p>
    </div>
    <div class="col-md-6 offset-1">
       <% @user.works.each do |work| %>
        <div class="card mb-3 w-100 shadow work-list">
          <div class="row no-gutters">
            <div class="col-md-4">
              <%= image_tag work.get_main_image(200, 200), class:"img-fluid" %>
            </div>
            <div class="col-md-5 mh-100">
              <div class="card-body">
                <h5 class="card-title mb-0"><%= work.title %></h5>
                <p class="card-text"><%= work.caption %></p>
                <p>
                  <%= link_to '詳細', admin_work_path(work), class:"text-link mx-1" %>
                </p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card-body">
                <p class="car-text"><small>
                いいね：<%= work.likes.count %></br>
                コメント数：<%= work.comments.count %></br>
                </small></p>
                <p class="card-text"><small class="text-muted">投稿日：<%= work.created_at.strftime('%Y/%m/%d') %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>