<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto shadow rounded p-0 border">
      <h2 class="text-center p-2 bg-secondary text-light rounded-top">ユーザー情報の編集</h2>
      <%= render 'layouts/error_message', obj: @user %>
      <div class="p-4">
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_area :introduction, class:"form-control", rows:5 %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image, "プロフィール画像" %>
            <%= f.file_field :profile_image, class:"form-control-file", accept: "image/*" %>
          </div>
          <%= f.submit "編集する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>