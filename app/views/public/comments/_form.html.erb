<p class="mb-3 text-center text-danger"><%= flash[:alert] %></p>
<%= form_with model: [@work, @comment] do |f| %>
  <div class="d-flex">
    <div class="form-group w-100">
      <%= f.text_field :message, class:"form-control", placeholder: "作品へのコメントを入力してください(30文字以内)" %>
    </div>
    <div class="form-group">
      <%= f.submit '送信', class:"ml-2 mt-1" %>
    </div>
  </div>
<% end %>