<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto shadow rounded p-0">
      <h2 class="bg-info py-3 text-light text-center">ユーザーログイン</h2>
      <p class="mt-3 text-center">メールアドレスとパスワードを入力してください</p>
      <p class="mb-3 text-center text-danger"><%= flash[:alert] %></p>
      <div class="px-4 pb-4">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        
          <div class="input-group py-3">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-envelope"></i></div>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "メールアドレス" %>
          </div>
          
          <div class="input-group pt-3">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "パスワード" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <%= f.submit "ログイン", class:"btn btn-info my-3" %>
        
        <% end %>
        
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
