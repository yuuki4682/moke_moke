<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get do |f| %>
    <div class="form-inline my-2 my-lg-0">
      <%= f.text_field :word, class:"form-control", placeholder:"Search" %>
      <%= f.submit '検索', class:"btn btn-outline-success my-2 my-sm-0" %>
    </div>
  <% end %>
<% end %>