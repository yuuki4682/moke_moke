<% if comment.reported_by?(current_user) %>
  <i class="fa-solid fa-flag text-warning"></i>
<% else %>
  <%= link_to work_comment_report_path(@work, comment), method: :post, class:"text-warning", "data-confirm" => "本当に通報しますか？", remote: true do %>
    <i class="fa-regular fa-flag"></i>
  <% end %>
<% end %>
