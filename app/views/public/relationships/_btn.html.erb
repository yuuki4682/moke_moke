<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー中', user_relationships_path(user), method: :delete, class:"btn btn-info btn-sm ml-2", remote: true %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user), method: :post, class:"btn btn-outline-info btn-sm ml-2", remote: true %>
  <% end %>
<% end %>